{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Form",
  "definitions": {
    "Form": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "controls": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Control"
          }
        }
      },
      "required": [
        "controls",
        "name"
      ],
      "title": "Form"
    },
    "Control": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Option"
          }
        },
        "order": {
          "type": "integer"
        }
      },
      "required": [
        "key",
        "label",
        "order",
        "type"
      ],
      "title": "Control"
    },
    "Option": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "key",
        "value"
      ],
      "title": "Option"
    }
  }
}